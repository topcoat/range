@import range-input-mixin

/*
Topcoat range input
-------------------------

  <input type='range' class='topcoat-range-input'>

*/

.topcoat-range-input
  range-input-base()
  border-radius var-border-radius
  border var-border
  background var-range-background
  height var-range-height
  margin var-margin
  border-radius var-border-radius--large
  -webkit-appearance none

.topcoat-range-input::-webkit-slider-thumb
  height var-range__slider-height
  width var-range__slider-width
  border var-range__slider-border
  border-radius var-border-radius
  background var-range__slider-background
  background-size var-range__slider-bg-size
  box-shadow var-range__slider-box-shadow
  cursor pointer
  -webkit-appearance: none